<% layout('./layouts/boilerplate') %>
<div id="cluster-map"></div>
<h1>Toate CazÄƒrile</h1>


<% for (let cazare of cazari){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if(cazare.images.length) { %>
                    <img class="img-fluid" alt="" src="<%=cazare.images[0].url%>"/>
                <% }else { %>
                    <img class="img-fluid" alt="" src="https://res.cloudinary.com/dj4kytz0z/image/upload/v1680708372/YelpCamp/udtl1iry1iidaoqes3bx.jpg"/>
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= cazare.title %></h5>
                    <p class="card-text"><%= cazare.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= cazare.location %></small>
                    </p>
                    <a href="/cazari/<%= cazare._id %>" class="btn btn-primary">Vezi
                        <%= cazare.title %></a>
                </div>
            </div>
        </div>
    </div>

<% } %>

<script>
    const mapToken = "<%- process.env.MAPBOX_TOKEN %>"
    const cazari = {
        features: <%- JSON.stringify(cazari) %>
    }
</script>
<script src="/javascripts/clusterMap.js"></script>
