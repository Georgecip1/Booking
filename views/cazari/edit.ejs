<% layout('./layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Modifică
        <%= cazare.title %>
    </h1>
    <div class="col-md-6 offset-md-3 mb-3">

        <form action="/cazari/<%= cazare._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Titlu</label>
                <input class="form-control" type="text" id="title" name="cazare[title]" value="<%= cazare.title %>" required/>
                <div class="valid-feedback">Arată Bine!!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Locație</label>
                <input class="form-control" type="text" id="location" name="cazare[location]" value="<%= cazare.location %>" required/>
                <div class="valid-feedback">Arată Bine!!</div>
            </div>

            <div class="mb3">
                <label class="form-label" for="price">Preț</label>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">Lei</span>
                    <input type="text" id="price" class="form-control" placeholder="0.00" aria-label="" aria-describedby="price-label" name="cazare[price]" value="<%= cazare.price %>" required/>
                    <div class="valid-feedback">Arată Bine!!</div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Descriere
                </label>
                <textarea class="form-control" type="text" id="description" name="cazare[description]" required>
                    <%= cazare.description %></textarea>
                <div class="valid-feedback">Arată Bine!!</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Alege imagini..</label>
                <input class="form-control" type="file" id="image" name="image" multiple/>
            </div>

            <div class="mb-3">
                <% cazare.images.forEach(function(img, i) { %>
                    <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>"></div>
                            <label for="image-<%= i %>">Șterge?</label>
                        <% }) %>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-info">Modifică Cazare</button>
                    </div>
                </form>

                <a href="/cazari/<%= cazare._id %>">Înapoi la cazări!</a>
            </div>
        </div>
